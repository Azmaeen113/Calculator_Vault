<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.calculator_vault_final.controller.PINSetupController" spacing="10" alignment="CENTER">
	<padding>
		<Insets top="20" right="20" bottom="20" left="20" />
	</padding>
	<Label text="Set / Change PIN" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
	<PasswordField fx:id="txtCurrent" promptText="Current PIN (for change)" visible="false" />
	<PasswordField fx:id="txtPin" promptText="Enter 5-digit PIN" />
	<PasswordField fx:id="txtConfirm" promptText="Confirm PIN" />
	<Button text="Submit" onAction="#onSubmit" />
</VBox>
