<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator_vault_final.controller.HistoryController">
	<padding>
		<Insets bottom="10" left="10" right="10" top="10" />
	</padding>
	
	<top>
		<VBox spacing="10">
			<Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Calculation History" />
			<HBox spacing="10">
				<Button onAction="#onClearAll" text="Clear All" />
				<Button onAction="#onBack" text="Back to Calculator" />
			</HBox>
		</VBox>
	</top>
	
	<center>
		<TableView fx:id="historyTable" BorderPane.margin="$x1">
			<columns>
				<TableColumn fx:id="expressionColumn" prefWidth="250" text="Expression" />
				<TableColumn fx:id="resultColumn" prefWidth="150" text="Result" />
				<TableColumn fx:id="timeColumn" prefWidth="200" text="Time" />
				<TableColumn fx:id="actionColumn" prefWidth="100" text="Action" />
			</columns>
		</TableView>
	</center>
</BorderPane>
