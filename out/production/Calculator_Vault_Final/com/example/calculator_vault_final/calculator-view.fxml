<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" styleClass="calculator-container" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator_vault_final.controller.CalculatorController">
	<padding>
		<Insets bottom="20" left="20" right="20" top="20" />
	</padding>
	<TextField fx:id="display" alignment="CENTER_RIGHT" editable="false" styleClass="calculator-display" />
	<GridPane hgap="10" vgap="10">
		<columnConstraints>
			<ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
			<ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
			<ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
			<ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
		</columnConstraints>
		<rowConstraints>
			<RowConstraints vgrow="SOMETIMES" />
			<RowConstraints vgrow="SOMETIMES" />
			<RowConstraints vgrow="SOMETIMES" />
			<RowConstraints vgrow="SOMETIMES" />
		</rowConstraints>

		<!-- Row 1 -->
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="7" GridPane.columnIndex="0" GridPane.rowIndex="0" />
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="8" GridPane.columnIndex="1" GridPane.rowIndex="0" />
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="9" GridPane.columnIndex="2" GridPane.rowIndex="0" />
		<Button minHeight="60" minWidth="80" onAction="#onOperator" styleClass="operator-button" text="รท" GridPane.columnIndex="3" GridPane.rowIndex="0" />

		<!-- Row 2 -->
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
		<Button minHeight="60" minWidth="80" onAction="#onOperator" styleClass="operator-button" text="ร" GridPane.columnIndex="3" GridPane.rowIndex="1" />

		<!-- Row 3 -->
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="1" GridPane.columnIndex="0" GridPane.rowIndex="2" />
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="2" GridPane.columnIndex="1" GridPane.rowIndex="2" />
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2" />
		<Button minHeight="60" minWidth="80" onAction="#onOperator" styleClass="operator-button" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />

		<!-- Row 4 -->
		<Button minHeight="60" minWidth="80" onAction="#onClear" styleClass="clear-button" text="C" GridPane.columnIndex="0" GridPane.rowIndex="3" />
		<Button minHeight="60" minWidth="80" onAction="#onNumber" styleClass="number-button" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
		<Button minHeight="60" minWidth="80" onAction="#onEquals" styleClass="equals-button" text="=" GridPane.columnIndex="2" GridPane.rowIndex="3" />
		<Button minHeight="60" minWidth="80" onAction="#onOperator" styleClass="operator-button" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" />
	</GridPane>
	
	<!-- History Button -->
	<Button maxWidth="Infinity" minHeight="40" onAction="#onHistory" styleClass="history-button" text="History" />
</VBox>
