<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.calculator_vault_final.controller.VaultController" styleClass="vault-container" stylesheets="@styles.css">
	<padding>
		<Insets top="15" right="15" bottom="15" left="15" />
	</padding>
	<top>
		<Label text="Secure Vault" styleClass="title-label" />
	</top>
	<center>
		<TableView fx:id="table">
			<columns>
				<TableColumn fx:id="colName" text="File Name" prefWidth="200" />
				<TableColumn fx:id="colType" text="Type" prefWidth="100" />
				<TableColumn fx:id="colSize" text="Size" prefWidth="120" />
				<TableColumn fx:id="colDate" text="Date Added" prefWidth="160" />
			</columns>
		</TableView>
	</center>
	<bottom>
		<HBox spacing="10" alignment="CENTER_RIGHT">
			<padding>
				<Insets top="10" />
			</padding>
			<Button fx:id="btnUpload" text="Upload File" onAction="#onUpload" styleClass="primary-button" />
			<Button fx:id="btnOpen" text="Open Selected" onAction="#onOpenSelected" disable="true" styleClass="primary-button" />
			<Button fx:id="btnDownload" text="Download Selected" onAction="#onDownloadSelected" disable="true" styleClass="primary-button" />
			<Button fx:id="btnDelete" text="Delete Selected" onAction="#onDeleteSelected" disable="true" styleClass="danger-button" />
			<Button fx:id="btnChangePin" text="Change PIN" onAction="#onChangePin" styleClass="secondary-button" />
			<Button fx:id="btnLock" text="Lock Vault" onAction="#onLockVault" styleClass="secondary-button" />
		</HBox>
	</bottom>
</BorderPane>
