<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.calculator_vault_final.controller.PINSetupController" spacing="15" alignment="CENTER" styleClass="pin-setup-container" stylesheets="@styles.css">
	<padding>
		<Insets top="30" right="30" bottom="30" left="30" />
	</padding>
	<Label text="Set / Change PIN" styleClass="subtitle-label" />
	<PasswordField fx:id="txtCurrent" promptText="Current PIN (for change)" visible="false" prefWidth="300" />
	<PasswordField fx:id="txtPin" promptText="Enter 5-digit PIN" prefWidth="300" />
	<PasswordField fx:id="txtConfirm" promptText="Confirm PIN" prefWidth="300" />
	<Button text="Submit" onAction="#onSubmit" styleClass="success-button" />
</VBox>
