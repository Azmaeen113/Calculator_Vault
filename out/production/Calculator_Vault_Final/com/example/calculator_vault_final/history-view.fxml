<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.calculator_vault_final.controller.HistoryController" styleClass="history-container" stylesheets="@styles.css">
	<padding>
		<Insets bottom="15" left="15" right="15" top="15" />
	</padding>
	
	<top>
		<VBox spacing="15">
			<Label styleClass="title-label" text="Calculation History" />
			<HBox spacing="10">
				<Button onAction="#onClearAll" styleClass="danger-button" text="Clear All" />
				<Button onAction="#onBack" styleClass="primary-button" text="Back to Calculator" />
			</HBox>
		</VBox>
	</top>
	
	<center>
		<TableView fx:id="historyTable">
			<BorderPane.margin>
				<Insets top="15" />
			</BorderPane.margin>
			<columns>
				<TableColumn fx:id="expressionColumn" prefWidth="280" text="Expression" minWidth="150" />
				<TableColumn fx:id="resultColumn" prefWidth="180" text="Result" minWidth="100" />
				<TableColumn fx:id="timeColumn" prefWidth="220" text="Date &amp; Time" minWidth="150" />
				<TableColumn fx:id="actionColumn" prefWidth="120" text="Action" minWidth="100" resizable="false" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</center>
</BorderPane>
